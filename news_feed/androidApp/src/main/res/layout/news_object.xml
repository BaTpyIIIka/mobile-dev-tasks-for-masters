<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="6dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="6dp"
    android:orientation="vertical"
    app:cardCornerRadius="12dp">


<RelativeLayout
android:layout_height="wrap_content"
android:layout_width="match_parent"
android:paddingLeft="16dp"
android:paddingRight="16dp">

    <ImageView
        android:id="@+id/news_image_view"
        android:layout_width="350dp"

        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="22dp"
        android:contentDescription="@string/news_image_description" />

    <TextView
        android:id="@+id/news_title"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/news_image_view"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="0dp"
        android:gravity="center"
        android:text="@string/news_title"
        android:textColor="#050505"
        android:textSize="24sp"
        android:textStyle="bold" />

<TextView
    android:autofillHints="@string/news_hint"
    android:ems="10"
    android:id="@+id/news_text_description"
    android:layout_alignParentEnd="true"

    android:layout_alignParentStart="true"
    android:layout_below="@+id/news_title"
    android:layout_height="wrap_content"
    android:layout_marginEnd="0dp"
    android:layout_marginStart="0dp"
    android:layout_marginTop="19dp"
    android:layout_width="395dp"
    android:textColor="#050505"
    android:singleLine="false"
    android:text="@string/news_descr" />

    <TextView
        android:id="@+id/news_published_date"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_below="@+id/news_text_description"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
</RelativeLayout></androidx.cardview.widget.CardView>